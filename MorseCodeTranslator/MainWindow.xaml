<Window x:Class="MorseCodeTranslator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MorseCodeTranslator"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <TextBlock x:Name="MainText" Background="Blue" Height="200"
                   FontSize="64" TextAlignment="Center" Width="800"
                   MouseDown="MainText_MouseDown" MouseUp="MainText_MouseUp">
            Click me
        </TextBlock>
        <TextBlock x:Name="HeldText" Background="red" Height="200"
                   FontSize="64" TextAlignment="Center" Width="800"></TextBlock>
        <StackPanel Orientation="Horizontal">
            <TextBox x:Name="MaxDotTime" PreviewTextInput="MaxDotTime_PreviewTextInput">
                
            </TextBox>
        </StackPanel>
    </StackPanel>
</Window>
